var log = new Log('assets');
var matcher = new URIMatcher(request.getRequestURI());
var carbon = require('carbon');

var store = '/{context}/t/{domain}/';
var apiEndpoint = '/{context}/t/{domain}/assets/{type}/api/{+suffix}';
var assetEndpoint = '/{context}/t/{domain}/assets/{type}';
var assetsEndpoint = '/{context}/t/{domain}/assets/{type}/{+suffix}';
var extensionsEndpoint = '/{context}/t/{domain}/extensions/{+suffix}';
var storageEndpoint = '/{context}/t/{domain}/storage/{+suffix}';
var storeLogin = '/{context}/t/{domain}/login';


var mapper = function (path) {
    return function () {
        return path;
    };
};
if (matcher.match(apiEndpoint)) {
    loadTenant(matcher.elements().domain);
    include('ref_apis_router.jag');
} else if (matcher.match(assetEndpoint) || matcher.match(assetsEndpoint)) {
    loadTenant(matcher.elements().domain);
    request.getMappedPath = mapper("/controllers/routers/assets.jag");
    include('routers/assets.jag');
} else if (matcher.match(storageEndpoint)) {
    loadTenant(matcher.elements().domain);
    include('routers/storage_router.jag');
}else if (matcher.match(store)) {
    loadTenant(matcher.elements().domain);
    request.getMappedPath = mapper("/controllers/top-assets.jag");
    include('top-assets.jag');
}else if(matcher.match(storeLogin)){
    request.getMappedPath = mapper("/controllers/login.jag");
    include('login.jag');
}else if(matcher.match(extensionsEndpoint)){
    loadTenant(matcher.elements().domain);
    request.getMappedPath = mapper("/controllers/routers/extensions.jag");
    include('/controllers/routers/extensions.jag');
}
else {
    response.sendError(404, 'Tenant Domain not found');
}

function loadTenant(domain) {

    var tenantId = carbon.server.tenantId({domain: domain});
    var event = require('event');
    event.emit('tenantLoad', tenantId);

};


%>