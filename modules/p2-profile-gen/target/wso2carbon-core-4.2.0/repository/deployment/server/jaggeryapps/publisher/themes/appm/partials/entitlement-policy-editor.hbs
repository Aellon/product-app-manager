<div id="entitlement-policy-editor" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Entitlement Policy Editor</h3>
    </div>
    <div class="modal-body" style="height:500px;max-height:none">
        <input id="resource-index" type="hidden"/>
        <div id="policy-content-container">
            <textarea id="policy-content" style="width:100%;height:100%"></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn" data-dismiss="modal">Close</a>
        <a id="btn-policy-save" class="btn btn-primary">Save policy</a>
    </div>
</div>